{
  "name": "extension",
  "displayName": "extension",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "markdown.previewScripts": [
    "./media/javascript.js"
  ],
  "contributes": {
    "configuration": {
      "title": "Configuraci贸n Extensi贸n ROBEQUIRON",
      "properties": {
        "fhirpathDemo.infofunc": {
          "type":"boolean",
          "default": false,
          "description": "Habilitar mostrar informaci贸n y ayuda de las funciones FHIRPATH"
        },
        "decorator.show": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar decoraci贸n de palabras claves en el editor"
        },
        "decorator.textEditor": {
          "type": "array",
          "default": [
            {
              "text" : "idWidget",
              "languageId": "json",
              "hoverMessage":"Mensaje hover",
              "style" : {
                "borderWidth": "1px",
                "borderStyle": "solid",
                "borderColor": "blue"
              }
            }
          ],
          "description": "Textos a decorar en el editor"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "package-explorer",
          "title": "Este es mi Activity",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "package-explorer": [
        {
          "id": "dependencias",
          "name": "Dependencias"
        },
        {
          "id": "fhirpath",
          "name": "Recursos fhirpath"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "fhirpathDemo.start",
          "when": "view == fhirpath"
        }
      ],
      "view/item/context": [
        {
          "command": "fhirpathDemo.getResource",
          "when": "view == fhirpath",
          "group": "inline",
          "arguments": [
            {
              "lineNumber": "$0"
            }
          ]
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "dependencias",
        "contents": "No node dependencies found [learn more](https://www.npmjs.com/).\n[Add Dependency](command:nodeDependencies.addEntry)"
      }
    ],
    "commands": [
      {
        "command": "fhirpathDemo.start",
        "title": "Iniciar fhirpath demo",
        "category": "Fhirpath"
      },
      {
        "command": "fhirpathDemo.getResource",
        "title": "Fhirpath con recursos",
        "icon": {
          "light": "media/icons/fhirpath.svg",
          "dark": "media/icons/fhirpath-dark.svg"
        }
      },
      {
        "command": "catCoding.doRefactor",
        "title": "Do some refactoring",
        "category": "Cat Coding"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "fhirpath": "^3.6.0",
    "rxjs": "^7.8.1"
  }
}
